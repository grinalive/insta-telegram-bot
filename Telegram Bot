import os
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, ContextTypes, filters
from instaloader import Instaloader, Post
import yt_dlp

TOKEN = os.getenv("BOT_TOKEN")

def download_instagram_video(url):
    loader = Instaloader()
    shortcode = url.strip('/').split('/')[-1]
    post = Post.from_shortcode(loader.context, shortcode)
    return post.video_url

def download_general_video(url):
    ydl_opts = {
        'format': 'best[ext=mp4]/best',
        'quiet': True,
        'noplaylist': True,
        'outtmpl': 'video.mp4',
    }
    with yt_dlp.YoutubeDL(ydl_opts) as ydl:
        info = ydl.extract_info(url, download=False)
        return info['url']

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("ðŸŽ¥ Linki gÃ¶nder, videoyu atayÄ±m.")

async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    url = update.message.text.strip()
    try:
        if "instagram.com" in url:
            video_url = download_instagram_video(url)
        else:
            video_url = download_general_video(url)
        await update.message.reply_video(video=video_url)
    except Exception:
        await update.message.reply_text("â›” Video indirilemedi.")

app = ApplicationBuilder().token(TOKEN).build()
app.add_handler(CommandHandler("start", start))
app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))
app.run_polling()